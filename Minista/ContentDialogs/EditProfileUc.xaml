<UserControl
    x:Class="Minista.ContentDialogs.EditProfileUc"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Minista.ContentDialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
             xmlns:core="using:Microsoft.Xaml.Interactions.Core"
             xmlns:behaviors="using:Minista.Behaviors"
    xmlns:cropper="using:Minista.Controls.PhotoCropper"
    
      xmlns:controls="using:Minista.UI.Controls"
             mc:Ignorable="d"
    d:DesignHeight="500"
    d:DesignWidth="600">

    <Grid Background="#CC000000">
        <Border CornerRadius="5">
            <Grid Background="#FF1B1B1B"
                  CornerRadius="5"
                  BorderBrush="{StaticResource DefaultBackgroundColor}"
                  BorderThickness=".8"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="360"
                  Height="480">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <AppBarButton x:Name="ExitButton"
                                  Foreground="{StaticResource DefaultForegroundColor}"
                                  Content=""
                                  Margin="2"
                                  FontFamily="{StaticResource MaterialSymbolFont}"
                                  FontSize="{StaticResource BigFontSize}"
                                  Click="ExitButtonClick">
                        <interactivity:Interaction.Behaviors>
                            <behaviors:PointersEvent />
                        </interactivity:Interaction.Behaviors>
                    </AppBarButton>
                    <TextBlock Text="Edit Profile"
                               Grid.Column="1"
                               Foreground="{StaticResource DefaultForegroundColor}"
                               FontFamily="{StaticResource VazirFont}"
                               FontSize="{StaticResource DefaultFontSize}"
                               VerticalAlignment="Center"
                               Margin="10 0" />
                    <AppBarButton x:Name="OkButton"
                                  Foreground="{StaticResource DefaultForegroundColor}"
                                  Grid.Column="2"
                                  Content=""
                                  Margin="2"
                                  FontFamily="{StaticResource MaterialSymbolFont}"
                                  FontSize="{StaticResource BigFontSize}"
                                  Click="OkButtonClick">
                        <interactivity:Interaction.Behaviors>
                            <behaviors:PointersEvent />
                        </interactivity:Interaction.Behaviors>
                    </AppBarButton>
                </Grid>
                <Rectangle Fill="#FF363636"
                           Height="1.2"
                           MinWidth="250"
                           MaxWidth="320"
                           Grid.Row="1"
                           Margin="5 2"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" />
                <ScrollViewer Grid.Row="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Ellipse x:Name="UserImage"
                                     Height="95"
                                     Width="95"
                                     Margin="5 5"
                                     Stroke="#FF3C2866"
                                     StrokeThickness="2" />

                            <Button x:Name="ChooseButton"
                                    Foreground="#FF07B8FB"
                                    Content="Change Profile Photo"
                                    Grid.Row="1"
                                    Margin="2"
                                    HorizontalAlignment="Center"
                                    FontFamily="{StaticResource VazirFont}"
                                    FontSize="{StaticResource DefaultFontSize}"
                                    Background="Transparent">
                                <interactivity:Interaction.Behaviors>
                                    <behaviors:PointersEvent />
                                </interactivity:Interaction.Behaviors>
                                <Button.Flyout>
                                    <Flyout Placement="Bottom">
                                        <Grid Background="#FF1B1B1B"
                                              Width="250">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Button x:Name="SelectFromGalleryButton"
                                                    Foreground="#FF07B8FB"
                                                    Content="Change Profile Picture"
                                                    Grid.Row="1"
                                                    Margin="2"
                                                    HorizontalAlignment="Center"
                                                    FontFamily="{StaticResource VazirFont}"
                                                    FontSize="{StaticResource DefaultFontSize}"
                                                    Click="SelectFromGalleryButtonClick"
                                                    Background="Transparent" />
                                        </Grid>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>

                        </Grid>
                        <Rectangle Fill="#FF363636"
                                   Height="1.2"
                                   MinWidth="250"
                                   MaxWidth="320"
                                   Grid.Row="1"
                                   Margin="5 2"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch" />

                        <Grid Grid.Row="3"
                              Margin="0 10 10 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid Margin="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="Name"
                                           FontFamily="{StaticResource VazirFont}"
                                           FontSize="{StaticResource DefaultFontSize}"
                                           VerticalAlignment="Center"
                                           Margin="10 0"
                                           Foreground="{StaticResource DefaultForegroundColor}" />

                                <TextBox x:Name="NameText"
                                         x:FieldModifier="public"
                                         FontFamily="{StaticResource VazirFont}"
                                         FontSize="{StaticResource DefaultFontSize}"
                                         Grid.Row="1"
                                         BorderThickness="0"
                                         HorizontalAlignment="Stretch"
                                         IsSpellCheckEnabled="False"
                                         Background="Transparent"
                                         Margin="10 0"
                                         PlaceholderText="Name"
                                         Style="{StaticResource TextBoxCenterWithBackgroundChange}"
                                         Foreground="{StaticResource DefaultForegroundColor}" />

                                <Rectangle Fill="#FF363636"
                                           Height="1.2"
                                           MinWidth="250"
                                           MaxWidth="320"
                                           Grid.Row="3"
                                           Margin="5 2"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch" />
                            </Grid>
                            <Grid Grid.Row="1"
                                  Margin="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="Username"
                                           FontFamily="{StaticResource VazirFont}"
                                           FontSize="{StaticResource DefaultFontSize}"
                                           VerticalAlignment="Center"
                                           Margin="10 0"
                                           Foreground="{StaticResource DefaultForegroundColor}" />

                                <TextBox x:Name="UsernameText"
                                         x:FieldModifier="public"
                                         FontFamily="{StaticResource VazirFont}"
                                         FontSize="{StaticResource DefaultFontSize}"
                                         Grid.Row="1"
                                         BorderThickness="0"
                                         HorizontalAlignment="Stretch"
                                         IsSpellCheckEnabled="False"
                                         Background="Transparent"
                                         Margin="10 0"
                                         PlaceholderText="Username"
                                         Foreground="{StaticResource DefaultForegroundColor}"
                                         Style="{StaticResource TextBoxCenterWithBackgroundChange}" />

                                <Rectangle Fill="#FF363636"
                                           Height="1.2"
                                           MinWidth="250"
                                           MaxWidth="320"
                                           Grid.Row="3"
                                           Margin="5 2"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch" />
                            </Grid>
                            <Grid Grid.Row="2"
                                  Margin="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="Website"
                                           FontFamily="{StaticResource VazirFont}"
                                           FontSize="{StaticResource DefaultFontSize}"
                                           VerticalAlignment="Center"
                                           Margin="10 0"
                                           Foreground="{StaticResource DefaultForegroundColor}" />

                                <TextBox x:Name="WebsiteText"
                                         x:FieldModifier="public"
                                         FontFamily="{StaticResource VazirFont}"
                                         FontSize="{StaticResource DefaultFontSize}"
                                         Grid.Row="1"
                                         BorderThickness="0"
                                         HorizontalAlignment="Stretch"
                                         IsSpellCheckEnabled="False"
                                         InputScope="Url"
                                         Background="Transparent"
                                         Margin="10 0"
                                         PlaceholderText="Website"
                                         Style="{StaticResource TextBoxCenterWithBackgroundChange}"
                                         Foreground="{StaticResource DefaultForegroundColor}" />
                                <Rectangle Fill="#FF363636"
                                           Height="1.2"
                                           MinWidth="250"
                                           MaxWidth="320"
                                           Grid.Row="3"
                                           Margin="5 2"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch" />
                            </Grid>
                            <Grid Grid.Row="3"
                                  Margin="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="Bio"
                                           FontFamily="{StaticResource VazirFont}"
                                           FontSize="{StaticResource DefaultFontSize}"
                                           VerticalAlignment="Center"
                                           Margin="10 0"
                                           Foreground="{StaticResource DefaultForegroundColor}" />

                                <TextBox x:Name="BioText"
                                         x:FieldModifier="public"
                                         AcceptsReturn="True"
                                         FontFamily="{StaticResource VazirFont}"
                                         FontSize="{StaticResource DefaultFontSize}"
                                         Grid.Row="1"
                                         BorderThickness="0"
                                         HorizontalAlignment="Stretch"
                                         IsSpellCheckEnabled="False"
                                         Background="Transparent"
                                         Margin="10 0"
                                         PlaceholderText="Bio"
                                         Style="{StaticResource TextBoxCenterWithBackgroundChange}"
                                         Foreground="{StaticResource DefaultForegroundColor}" />
                                <Rectangle Fill="#FF363636"
                                           Height="1.2"
                                           MinWidth="250"
                                           MaxWidth="320"
                                           Grid.Row="3"
                                           Margin="5 2"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch" />
                            </Grid>
                            <Grid x:Name="PublicInformationGrid"
                                  Visibility="Collapsed"
                                  Grid.Row="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="Public information"
                                           FontFamily="{StaticResource VazirFont}"
                                           FontSize="{StaticResource DefaultFontSize}"
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource DefaultForegroundColor}"
                                           Margin="10 15" />
                                <Grid Grid.Row="1"
                                      Margin="3"
                                      Visibility="Collapsed">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="E-mail address"
                                               FontFamily="{StaticResource VazirFont}"
                                               FontSize="{StaticResource DefaultFontSize}"
                                               VerticalAlignment="Center"
                                               Margin="10 0"
                                               Foreground="{StaticResource DefaultForegroundColor}" />

                                    <TextBox x:Name="EmailText"
                                             x:FieldModifier="public"
                                             AcceptsReturn="True"
                                             FontFamily="{StaticResource VazirFont}"
                                             FontSize="{StaticResource DefaultFontSize}"
                                             Grid.Row="1"
                                             BorderThickness="0"
                                             HorizontalAlignment="Stretch"
                                             IsSpellCheckEnabled="False"
                                             Background="Transparent"
                                             Margin="10 0"
                                             PlaceholderText="Enter your email address"
                                             Style="{StaticResource TextBoxCenterWithBackgroundChange}"
                                             Foreground="{StaticResource DefaultForegroundColor}" />
                                    <Rectangle Fill="#FF363636"
                                               Height="1.2"
                                               MinWidth="250"
                                               MaxWidth="320"
                                               Grid.Row="3"
                                               Margin="5 2"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Stretch" />
                                </Grid>
                                <Grid Grid.Row="2"
                                      Margin="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Phone number"
                                               FontFamily="{StaticResource VazirFont}"
                                               FontSize="{StaticResource DefaultFontSize}"
                                               VerticalAlignment="Center"
                                               Margin="10 0"
                                               Foreground="{StaticResource DefaultForegroundColor}" />

                                    <TextBox x:Name="PhoneNumberText"
                                             x:FieldModifier="public"
                                             AcceptsReturn="True"
                                             FontFamily="{StaticResource VazirFont}"
                                             FontSize="{StaticResource DefaultFontSize}"
                                             Grid.Row="1"
                                             BorderThickness="0"
                                             HorizontalAlignment="Stretch"
                                             IsSpellCheckEnabled="False"
                                             Background="Transparent"
                                             Margin="10 0"
                                             PlaceholderText="Enter your phone number"
                                             Style="{StaticResource TextBoxCenterWithBackgroundChange}"
                                             Foreground="{StaticResource DefaultForegroundColor}" />
                                    <Rectangle Fill="#FF363636"
                                               Height="1.2"
                                               MinWidth="250"
                                               MaxWidth="320"
                                               Grid.Row="3"
                                               Margin="5 2"
                                               HorizontalAlignment="Stretch"
                                               VerticalAlignment="Stretch" />
                                </Grid>

                                <Grid Grid.Row="3"
                                      Margin="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Gender"
                                               FontFamily="{StaticResource VazirFont}"
                                               FontSize="{StaticResource DefaultFontSize}"
                                               VerticalAlignment="Center"
                                               Margin="10 0"
                                               Foreground="{StaticResource DefaultForegroundColor}" />

                                    <ComboBox x:Name="GenderCombo"
                                              BorderThickness="0"
                                              Grid.Row="1"
                                              Margin="10 5"
                                              HorizontalAlignment="Stretch"
                                              Background="Transparent"
                                              Foreground="{StaticResource DefaultForegroundColor}"
                                              SelectionChanged="GenderComboSelectionChanged">
                                        <ComboBoxItem Content="Female"
                                                      Foreground="{StaticResource DefaultForegroundColor}" />
                                        <ComboBoxItem Content="Male"
                                                      Foreground="{StaticResource DefaultForegroundColor}" />
                                        <ComboBoxItem Content="Custom"
                                                      Foreground="{StaticResource DefaultForegroundColor}" />
                                        <ComboBoxItem Content="Prefer Not to Say"
                                                      Foreground="{StaticResource DefaultForegroundColor}" />
                                    </ComboBox>
                                    <TextBox x:Name="CustomGenderText"
                                             Visibility="Collapsed"
                                             x:FieldModifier="public"
                                             AcceptsReturn="True"
                                             FontFamily="{StaticResource VazirFont}"
                                             FontSize="{StaticResource DefaultFontSize}"
                                             Grid.Row="2"
                                             BorderThickness="0"
                                             HorizontalAlignment="Stretch"
                                             IsSpellCheckEnabled="False"
                                             Background="Transparent"
                                             Margin="10 0"
                                             PlaceholderText="Custom Gender"
                                             Style="{StaticResource TextBoxCenterWithBackgroundChange}"
                                             Foreground="{StaticResource DefaultForegroundColor}" />
                                </Grid>
                            </Grid>

                            <ToggleButton x:Name="PersonalInformationButton"
                                          Content="Personal information Settings"
                                          Grid.Row="5"
                                          Style="{StaticResource HeaderToggleButtonWithoutIconStyle}"
                                          Background="Transparent"
                                          FontSize="{StaticResource DefaultFontSize}"
                                          FontFamily="{StaticResource VazirFont}"
                                          Margin="4 0"
                                          Click="PersonalInformationButtonClick" />
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Border>
        <Border x:Name="EditorGrid"
                  Visibility="Collapsed"
                CornerRadius="5">
            <Grid Background="#FF1B1B1B"
                  CornerRadius="5"
                  BorderBrush="{StaticResource DefaultBackgroundColor}"
                  BorderThickness=".8"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="360"
                  Height="480">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <AppBarButton x:Name="ExitImageButton"
                                  Foreground="{StaticResource DefaultForegroundColor}"
                                  Content=""
                                  Margin="2"
                                  FontFamily="{StaticResource MaterialSymbolFont}"
                                  FontSize="{StaticResource BigFontSize}"
                                  Click="ExitImageButtonClick">
                        <interactivity:Interaction.Behaviors>
                            <behaviors:PointersEvent />
                        </interactivity:Interaction.Behaviors>
                    </AppBarButton>
                    <TextBlock Text="Photo Editor"
                               Grid.Column="1"
                               FontFamily="{StaticResource VazirFont}"
                               FontSize="{StaticResource DefaultFontSize}"
                               Foreground="{StaticResource DefaultForegroundColor}"
                               VerticalAlignment="Center"
                               Margin="10 0" />
                    <AppBarButton x:Name="OkImageButton"
                                  Foreground="{StaticResource DefaultForegroundColor}"
                                  Grid.Column="2"
                                  Content=""
                                  Margin="2"
                                  FontFamily="{StaticResource MaterialSymbolFont}"
                                  FontSize="{StaticResource BigFontSize}"
                                  Click="OkImageButtonClick">
                        <interactivity:Interaction.Behaviors>
                            <behaviors:PointersEvent />
                        </interactivity:Interaction.Behaviors>
                    </AppBarButton>
                </Grid>
                <Rectangle Fill="#FF363636"
                           Height="1.2"
                           MinWidth="250"
                           MaxWidth="320"
                           Grid.Row="1"
                           Margin="5 2"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" />
                <!--<cropper:ImageCropper x:Name="ImageCropper"
                                      Grid.Row="2"
                                      VerticalAlignment="Stretch"
                                      HorizontalAlignment="Stretch" />-->
                <controls:ImageCropper x:Name="ImageCropper"
                                      Grid.Row="2"
                                      VerticalAlignment="Stretch"
                                      HorizontalAlignment="Stretch" />
                
            </Grid>
        </Border>

        <Border x:Name="PersonalInfoGrid"
                Visibility="Collapsed"
                CornerRadius="5">
            <Grid Background="#FF1B1B1B"
                  CornerRadius="5"
                  BorderBrush="{StaticResource DefaultBackgroundColor}"
                  BorderThickness=".8"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"
                  Width="360"
                  Height="480">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <AppBarButton x:Name="PersonalExitButton"
                                  Foreground="{StaticResource DefaultForegroundColor}"
                                  Content=""
                                  Margin="2"
                                  FontFamily="{StaticResource MaterialSymbolFont}"
                                  FontSize="{StaticResource BigFontSize}"
                                  Click="PersonalExitButtonClick">
                        <interactivity:Interaction.Behaviors>
                            <behaviors:PointersEvent />
                        </interactivity:Interaction.Behaviors>
                    </AppBarButton>
                    <TextBlock Text="Personal Information"
                               Grid.Column="1"
                               Foreground="{StaticResource DefaultForegroundColor}"
                               FontFamily="{StaticResource VazirFont}"
                               FontSize="{StaticResource DefaultFontSize}"
                               VerticalAlignment="Center"
                               Margin="10 0" />
                    <AppBarButton x:Name="PersonalOkButton"
                                  Foreground="{StaticResource DefaultForegroundColor}"
                                  Grid.Column="2"
                                  Content=""
                                  Margin="2"
                                  FontFamily="{StaticResource MaterialSymbolFont}"
                                  FontSize="{StaticResource BigFontSize}"
                                  Click="PersonalOkButtonClick">
                        <interactivity:Interaction.Behaviors>
                            <behaviors:PointersEvent />
                        </interactivity:Interaction.Behaviors>
                    </AppBarButton>
                </Grid>
                <Rectangle Fill="#FF363636"
                           Height="1.2"
                           MinWidth="250"
                           MaxWidth="320"
                           Grid.Row="1"
                           Margin="5 2"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" />
                <ScrollViewer Grid.Row="2">
                    <Grid>
                        <Grid Margin="0 10 10 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock Text="Provide your personal information, even if the account is used for business, a pet or something else. This won't be part of your public profile."
                                       TextWrapping="Wrap"
                                       FontFamily="{StaticResource VazirFont}"
                                       FontSize="{StaticResource DefaultFontSize}"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource DefaultForegroundColor}"
                                       Margin="10 15" />
                            <Grid Grid.Row="1"
                                  Margin="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="E-mail address"
                                           FontFamily="{StaticResource VazirFont}"
                                           FontSize="{StaticResource DefaultFontSize}"
                                           VerticalAlignment="Center"
                                           Margin="10 0"
                                           Foreground="{StaticResource DefaultForegroundColor}" />

                                <TextBox x:Name="PersonalEmailText"
                                         x:FieldModifier="public"
                                         AcceptsReturn="True"
                                         FontFamily="{StaticResource VazirFont}"
                                         FontSize="{StaticResource DefaultFontSize}"
                                         Grid.Row="1"
                                         BorderThickness="0"
                                         HorizontalAlignment="Stretch"
                                         IsSpellCheckEnabled="False"
                                         Background="Transparent"
                                         Margin="10 0"
                                         PlaceholderText="Enter your email address"
                                         Style="{StaticResource TextBoxCenterWithBackgroundChange}"
                                         Foreground="{StaticResource DefaultForegroundColor}" />
                                <Rectangle Fill="#FF363636"
                                           Height="1.2"
                                           MinWidth="250"
                                           MaxWidth="320"
                                           Grid.Row="3"
                                           Margin="5 2"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch" />
                            </Grid>
                            <Grid Grid.Row="2"
                                  Margin="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="Phone number"
                                           FontFamily="{StaticResource VazirFont}"
                                           FontSize="{StaticResource DefaultFontSize}"
                                           VerticalAlignment="Center"
                                           Margin="10 0"
                                           Foreground="{StaticResource DefaultForegroundColor}" />

                                <TextBox x:Name="PersonalPhoneNumberText"
                                         x:FieldModifier="public"
                                         AcceptsReturn="True"
                                         FontFamily="{StaticResource VazirFont}"
                                         FontSize="{StaticResource DefaultFontSize}"
                                         Grid.Row="1"
                                         BorderThickness="0"
                                         HorizontalAlignment="Stretch"
                                         IsSpellCheckEnabled="False"
                                         Background="Transparent"
                                         Margin="10 0"
                                         PlaceholderText="Enter your phone number"
                                         Style="{StaticResource TextBoxCenterWithBackgroundChange}"
                                         Foreground="{StaticResource DefaultForegroundColor}" />
                                <Rectangle Fill="#FF363636"
                                           Height="1.2"
                                           MinWidth="250"
                                           MaxWidth="320"
                                           Grid.Row="3"
                                           Margin="5 2"
                                           HorizontalAlignment="Stretch"
                                           VerticalAlignment="Stretch" />
                            </Grid>
                            <Grid Grid.Row="3"
                                  Margin="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="Gender"
                                           FontFamily="{StaticResource VazirFont}"
                                           FontSize="{StaticResource DefaultFontSize}"
                                           VerticalAlignment="Center"
                                           Margin="10 0"
                                           Foreground="{StaticResource DefaultForegroundColor}" />

                                <ComboBox x:Name="PersonalGenderCombo"
                                          BorderThickness="0"
                                          Grid.Row="1"
                                          Margin="10 5"
                                          HorizontalAlignment="Stretch"
                                          Background="Transparent"
                                          Foreground="{StaticResource DefaultForegroundColor}"
                                          SelectionChanged="PersonalGenderComboSelectionChanged">
                                    <ComboBoxItem Content="Female"
                                                  Foreground="{StaticResource DefaultForegroundColor}" />
                                    <ComboBoxItem Content="Male"
                                                  Foreground="{StaticResource DefaultForegroundColor}" />
                                    <ComboBoxItem Content="Custom"
                                                  Foreground="{StaticResource DefaultForegroundColor}" />
                                    <ComboBoxItem Content="Prefer Not to Say"
                                                  Foreground="{StaticResource DefaultForegroundColor}" />
                                </ComboBox>
                                <TextBox x:Name="PersonalCustomGenderText"
                                         Visibility="Collapsed"
                                         x:FieldModifier="public"
                                         AcceptsReturn="True"
                                         FontFamily="{StaticResource VazirFont}"
                                         FontSize="{StaticResource DefaultFontSize}"
                                         Grid.Row="2"
                                         BorderThickness="0"
                                         HorizontalAlignment="Stretch"
                                         IsSpellCheckEnabled="False"
                                         Background="Transparent"
                                         Margin="10 0"
                                         PlaceholderText="Custom Gender"
                                         Style="{StaticResource TextBoxCenterWithBackgroundChange}"
                                         Foreground="{StaticResource DefaultForegroundColor}" />

                            </Grid>
                            <Grid Grid.Row="4"
                                  Margin="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="Birthday"
                                           FontFamily="{StaticResource VazirFont}"
                                           FontSize="{StaticResource DefaultFontSize}"
                                           VerticalAlignment="Center"
                                           Margin="10 0"
                                           Foreground="{StaticResource DefaultForegroundColor}" />
                                <DatePicker x:Name="BirthDatePicker"
