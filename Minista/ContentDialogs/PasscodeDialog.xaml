<ContentDialog
    x:Class="Minista.ContentDialogs.PasscodeDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Minista.ContentDialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
               xmlns:sec="using:Minista.Views.Security"
               Background="{x:Null}"
               BorderBrush="Transparent"
               BorderThickness="0">

    <Grid Height="400">
        <sec:PasscodeView x:Name="Passcode" />
        <AppBarButton x:Name="BackButton"
                      Foreground="{StaticResource DefaultForegroundColor}"
                      VerticalAlignment="Top"
                      HorizontalAlignment="Left"
                      Content=""
                      Margin="2"
                      FontFamily="{StaticResource MaterialSymbolFont}"
                      FontSize="{StaticResource BigFontSize}"
                      Click="BackButtonClick" />
    </Grid>
</ContentDialog>
