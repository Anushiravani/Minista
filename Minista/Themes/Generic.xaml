                                        <Setter Target="ImageThumb.ManipulationMode"
                                                Value="None" />
                                        <Setter Target="ThumbsContainer.IsHitTestVisible"
                                                Value="False" />
                                        <Setter Target="Clip.IsHitTestVisible"
