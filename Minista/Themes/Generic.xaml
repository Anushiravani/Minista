                                                         To="1"
                                                         Storyboard.TargetName="Clip"
                                                         Storyboard.TargetProperty="Opacity" />
                                        <DoubleAnimation From="1.0"
                                                         To="0"
                                                         Storyboard.TargetName="ThumbsContainer"
