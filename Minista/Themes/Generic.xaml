                        </VisualStateManager.VisualStateGroups>

                        <Grid.Resources>
                            <Style x:Key="CircularThumbStyle"
                                   TargetType="ugc:ImageCropperThumb">
                                <Setter Property="Background"
                                        Value="White" />
                                <Setter Property="BorderBrush"
                                        Value="Black" />
                                <Setter Property="BorderThickness"
                                        Value="1" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ugc:ImageCropperThumb">
                                            <Grid Background="Transparent">
                                                <Ellipse Width="20"
                                                         Height="20"
                                                         Fill="{TemplateBinding Background}"
                                                         Stroke="{TemplateBinding BorderBrush}"
                                                         StrokeThickness="{TemplateBinding BorderThickness}" />
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                            <Style x:Key="SideThumbStyle"
                                   TargetType="ugc:ImageCropperThumb">
                                <Setter Property="Background"
                                        Value="White" />
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ugc:ImageCropperThumb">
                                            <Grid Background="Transparent" />
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                            <Style x:Key="HorizontalSideThumbStyle"
                                   BasedOn="{StaticResource SideThumbStyle}"
                                   TargetType="ugc:ImageCropperThumb">
                                <Setter Property="Height"
                                        Value="20" />
                                <Setter Property="Padding"
                                        Value="0,9" />
                            </Style>
                            <Style x:Key="VerticalSideThumbStyle"
                                   BasedOn="{StaticResource SideThumbStyle}"
                                   TargetType="ugc:ImageCropperThumb">
                                <Setter Property="Width"
                                        Value="20" />
                                <Setter Property="Padding"
                                        Value="9,0" />
                            </Style>
                        </Grid.Resources>

                        <Canvas>
                            <Grid x:Name="ImageThumb"
                                  RenderTransformOrigin="0.5,0.5"
                                  ManipulationMode="Rotate,Scale,TranslateX,TranslateY">
                                <Grid.RenderTransform>
                                    <CompositeTransform x:Name="ImageThumbTransform" />
                                </Grid.RenderTransform>
                                <Image x:Name="ImageViewer"
                                       Stretch="None" />
                                <ContentPresenter HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                  VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />
                            </Grid>

                            <Path x:Name="Clip"
                                  Opacity="0.6"
                                  Fill="{TemplateBinding Background}"
                                  Stroke="Transparent"
                                  StrokeThickness="1">
                                <Path.Data>
                                    <GeometryGroup>
                                        <RectangleGeometry x:Name="OuterClip" />
                                        <RectangleGeometry x:Name="InnerClip" />
                                    </GeometryGroup>
                                </Path.Data>
                            </Path>

                            <Grid x:Name="ThumbsContainer">
                                <Rectangle Stroke="White"
                                           StrokeThickness="2"
                                           Margin="-2" />

                                <ugc:ImageCropperThumb x:Name="LeftThumb"
                                                         Style="{StaticResource VerticalSideThumbStyle}"
                                                         Margin="-11,-11,-10,-11"
                                                         HorizontalAlignment="Left"
                                                         VerticalAlignment="Stretch" />
                                <ugc:ImageCropperThumb x:Name="TopThumb"
                                                         Style="{StaticResource HorizontalSideThumbStyle}"
                                                         Margin="-11,-11,-11,-10"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Top" />
                                <ugc:ImageCropperThumb x:Name="RightThumb"
                                                         Style="{StaticResource VerticalSideThumbStyle}"
                                                         Margin="-10,-11,-11,-11"
                                                         HorizontalAlignment="Right"
                                                         VerticalAlignment="Stretch" />
                                <ugc:ImageCropperThumb x:Name="BottomThumb"
                                                         Style="{StaticResource HorizontalSideThumbStyle}"
                                                         Margin="-11,-10,-11,-11"
                                                         HorizontalAlignment="Stretch"
                                                         VerticalAlignment="Bottom" />

                                <ugc:ImageCropperThumb x:Name="TopLeftThumb"
                                                         Style="{StaticResource CircularThumbStyle}"
                                                         Margin="-11,-11,-10,-10"
                                                         HorizontalAlignment="Left"
                                                         VerticalAlignment="Top" />
                                <ugc:ImageCropperThumb x:Name="TopRightThumb"
                                                         Style="{StaticResource CircularThumbStyle}"
                                                         Margin="-10,-11,-11,-10"
                                                         HorizontalAlignment="Right"
                                                         VerticalAlignment="Top" />
                                <ugc:ImageCropperThumb x:Name="BottomLeftThumb"
                                                         Style="{StaticResource CircularThumbStyle}"
                                                         Margin="-11,-10,-10,-11"
                                                         HorizontalAlignment="Left"
                                                         VerticalAlignment="Bottom" />
                                <ugc:ImageCropperThumb x:Name="BottomRightThumb"
                                                         Style="{StaticResource CircularThumbStyle}"
                                                         Margin="-10,-10,-11,-11"
                                                         HorizontalAlignment="Right"
                                                         VerticalAlignment="Bottom" />
                            </Grid>
                        </Canvas>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <x:Double x:Key="Size">30</x:Double>
    <x:Double x:Key="TransformSize">-15</x:Double>

    <DataTemplate x:Key="CornerTemplate">
        <Ellipse Height="{StaticResource Size}"
                 Width="{StaticResource Size}"
                 Fill="{StaticResource ApplicationPageBackgroundThemeBrush}"
                 Stroke="{StaticResource ApplicationForegroundThemeBrush}"
                 StrokeThickness="2">
            <Ellipse.RenderTransform>
                <CompositeTransform TranslateX="{StaticResource TransformSize}"
                                    TranslateY="{StaticResource TransformSize}" />
            </Ellipse.RenderTransform>
        </Ellipse>
    </DataTemplate>

