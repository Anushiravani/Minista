                                <Setter Property="Margin"
                                        Value="1 3 0 5" />
                                <Setter Property="Padding"
                                        Value="1" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>

                    <Grid Grid.Row="2"
                          Height="1"
                          Margin="5 1"
                          Background="#FF2E2E2E" />
                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="ViewersNotAvailableTemplate">
                <Grid>
                    <TextBlock Text="Viewer lists aren't available after 24 hours."
                               FontFamily="{StaticResource VazirFont}"
                               FontSize="{StaticResource TinyFontSize}"
                               Margin="8 12"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Foreground="{StaticResource DefaultForegroundColor}" />

                </Grid>
            </DataTemplate>
            <Style x:Key="GridViewItemContainerStyle"
                   TargetType="GridViewItem">
                <Setter Property="HorizontalContentAlignment"
                        Value="Stretch" />
                <Setter Property="HorizontalAlignment"
                        Value="Stretch" />
                <Setter Property="VerticalContentAlignment"
                        Value="Stretch" />
                <Setter Property="VerticalAlignment"
                        Value="Stretch" />
                <Setter Property="Margin"
                        Value="1" />
                <Setter Property="Padding"
                        Value="0" />
            </Style>

            <vm:StoryViewerTemplateSelector x:Key="StoryViewerTemplateSelector"
                                            ViewersTemplate="{StaticResource ViewersTemplate}"
                                            PollVotersTemplate="{StaticResource PollVotersTemplate}"
                                            PollResultsTemplate="{StaticResource PollResultsTemplate}"
                                            QuestionsResponsesTemplate="{StaticResource QuestionsResponsesTemplate}"
                                            QuizResultsTemplate="{StaticResource QuizResultsTemplate}"
                                            QuizAnswersTemplate="{StaticResource QuizAnswersTemplate}"
                                            SliderResultsTemplate="{StaticResource SliderResultsTemplate}"
                                            SliderAnswersTemplate="{StaticResource SliderAnswersTemplate}"
                                            ViewersNotAvailableTemplate="{StaticResource ViewersNotAvailableTemplate}"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Height="52">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button x:Name="BackButton"
                    Foreground="{StaticResource DefaultInnerForegroundColor}"
                    Background="{x:Null}"
                    Click="BackButtonClick">
                <Button.Content>
                    <FontIcon Glyph="" />
                </Button.Content>
            </Button>
            <TextBlock x:Name="MainTextBlock"
                
                Margin="5"
                       Grid.Column="1"
                       Foreground="{StaticResource DefaultForegroundColor}"
                       VerticalAlignment="Center">
                <Run FontFamily="{StaticResource MaterialSymbolFont}"
                     FontSize="{StaticResource DefaultFontSize}"
                     Text="" /> <Run FontFamily="{StaticResource VazirFont}"
                                      FontSize="{StaticResource DefaultFontSize}"
                                      Text="{Binding ViewerCount }" />
            </TextBlock>
            <TextBlock x:Name="SecondTextBlock"
                       FontFamily="{StaticResource VazirFont}"
                       FontSize="{StaticResource DefaultFontSize}"
                       Foreground="{StaticResource DefaultForegroundColor}"
                       Margin="5"
                       Grid.Column="1"
                       VerticalAlignment="Center" Visibility="Collapsed"/>
        </Grid>
        <Grid Grid.Row="1"
              Height="1"
              Background="#FF2E2E2E" />
        <Grid x:Name="MainGrid" Grid.Row="2">
            <ListView x:Name="MainLV"
                      Foreground="{StaticResource DefaultInnerForegroundColor}"
                      SelectionMode="None"
                      Margin="5"
                      ItemsSource="{Binding Items, Mode=OneWay}"
                      ItemTemplateSelector="{StaticResource StoryViewerTemplateSelector}"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      IsItemClickEnabled="False">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="VerticalContentAlignment"
                                Value="Stretch" />
                        <Setter Property="HorizontalContentAlignment"
                                Value="Stretch" />
                        <Setter Property="Margin"
                                Value="1" />
                        <Setter Property="Padding"
                                Value="0" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

        </Grid>
        <Grid x:Name="QuestionRespondersGrid"
              Grid.Row="2" 
              Visibility="Collapsed">

            <localX:AdaptiveGridView x:Name="QuestionRespondersGV"
                                     MinItemHeight="210"
                                    MinItemWidth="215"
                                    Margin="5"
                                    ItemsSource="{Binding ResponderVM.Items, Mode=OneWay}"
                                     ItemTemplate="{StaticResource QuestionsResponsesUserXTemplate}"
                                    SelectionMode="None"
                                    IsItemClickEnabled="True"
                                    ItemContainerStyle="{StaticResource GridViewItemContainerStyle}">
                <GridView.ItemContainerTransitions>
                    <TransitionCollection>
                        <EntranceThemeTransition />
                    </TransitionCollection>
                </GridView.ItemContainerTransitions>

                <localX:AdaptiveGridView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <ItemsWrapGrid HorizontalAlignment="Center"
                                       Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </localX:AdaptiveGridView.ItemsPanel>
            </localX:AdaptiveGridView>
        </Grid>

        <Grid x:Name="PollVotersGrid"
              Grid.Row="2"
              Visibility="Collapsed">
            <Pivot x:Name="MainPivot"
                   Grid.Row="1"
                   Padding="0"
                   Margin="0">
                <PivotItem Header="{Binding PollVotersVM.YesText}"
                           Padding="0"
                           Margin="0">
                    <ListView x:Name="LVYes" Foreground="{StaticResource DefaultInnerForegroundColor}"
                              SelectionMode="None"
                              Margin="5"
                              ItemsSource="{Binding PollVotersVM.ItemsYes, Mode=OneWay}"
                              ItemTemplate="{StaticResource PollVotersUserTemplate}"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              IsItemClickEnabled="False">

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="VerticalContentAlignment"
                                        Value="Stretch" />
                                <Setter Property="HorizontalContentAlignment"
                                        Value="Stretch" />
                                <Setter Property="Margin"
                                        Value="1" />
                                <Setter Property="Padding"
                                        Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </PivotItem>
                <PivotItem Header="{Binding PollVotersVM.NoText}"
                           Padding="0"
                           Margin="0">
                    <ListView x:Name="LVNo"
                              Foreground="{StaticResource DefaultInnerForegroundColor}"
                              SelectionMode="None"
                              Margin="5"
                              ItemsSource="{Binding PollVotersVM.ItemsNo, Mode=OneWay}"
                              ItemTemplate="{StaticResource PollVotersUserTemplate}"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              IsItemClickEnabled="False">

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="VerticalContentAlignment"
                                        Value="Stretch" />
                                <Setter Property="HorizontalContentAlignment"
                                        Value="Stretch" />
                                <Setter Property="Margin"
                                        Value="1" />
                                <Setter Property="Padding"
                                        Value="0" />
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </PivotItem>
            </Pivot>

        </Grid>
        <Grid x:Name="QuizAnswersGrid"
              Grid.Row="2"
              Visibility="Collapsed">
            <ListView x:Name="LVQuizAnswers"
                      Foreground="{StaticResource DefaultInnerForegroundColor}"
                      SelectionMode="None"
                      Margin="5"
                      ItemsSource="{Binding QuizAnswersVM.Items, Mode=OneWay}"
                      ItemTemplate="{StaticResource QuizAnswerUserTemplate}"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      IsItemClickEnabled="False">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="VerticalContentAlignment"
                                Value="Stretch" />
                        <Setter Property="HorizontalContentAlignment"
                                Value="Stretch" />
                        <Setter Property="Margin"
                                Value="1" />
                        <Setter Property="Padding"
                                Value="0" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

        </Grid>

        <Grid x:Name="SliderVoteGrid"
              Grid.Row="2"
              Visibility="Collapsed">
            <ListView x:Name="LVSliderVote"
                      Foreground="{StaticResource DefaultInnerForegroundColor}"
                      SelectionMode="None"
                      Margin="5"
                      ItemsSource="{Binding SliderVotersVM.Items, Mode=OneWay}"
                      ItemTemplate="{StaticResource SliderAnswersUserTemplate}"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      IsItemClickEnabled="False">

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="VerticalContentAlignment"
                                Value="Stretch" />
                        <Setter Property="HorizontalContentAlignment"
                                Value="Stretch" />
                        <Setter Property="Margin"
                                Value="1" />
                        <Setter Property="Padding"
                                Value="0" />
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

        </Grid>
    </Grid>
</UserControl>
