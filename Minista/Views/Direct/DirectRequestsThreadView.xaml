    <Grid Background="{StaticResource DefaultBackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <MediaElement x:Name="ME"
                      Opacity="0"
                      AutoPlay="False"
                      MediaOpened="MEMediaOpened"
                      MediaEnded="MEMediaEnded"
                      MediaFailed="MEMediaFailed" />

        <ListView x:Name="ItemsLV"
                  Foreground="{StaticResource DefaultInnerForegroundColor}"
                  SelectionMode="None"
                  Grid.Row="1"
                  Margin="5"
                  ItemTemplateSelector="{StaticResource ThreadItemTemplateSelector}"
                  ItemsSource="{Binding Items, Mode=OneWay}"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  IsItemClickEnabled="False">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="VerticalContentAlignment"
                            Value="Stretch" />
                    <Setter Property="HorizontalContentAlignment"
                            Value="Stretch" />
                    <Setter Property="Margin"
                            Value="2" />
                    <Setter Property="Padding"
                            Value="0" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Rectangle Fill="#FF363636"
                       Height="1.5"
                       Grid.ColumnSpan="3"
                       Margin="15 2.5"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch" />
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />

                    </Grid.RowDefinitions>
                    <Ellipse x:Name="UserImage"
                             Height="48"
                             Width="48"
                             VerticalAlignment="Bottom"
                             HorizontalAlignment="Center"
                             StrokeThickness="0"
                             Margin="4" 
                             Tapped="UserImageTapped"/>
                    <TextBlock x:Name="UsernameText"
                               Grid.Row="1"
                               Text=""
                               Foreground="#FFA6A6A6"
                               FontFamily="{StaticResource VazirFont}"
                               FontSize="{StaticResource DefaultFontSize}"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"
                               Margin="8" />
                    <TextBlock x:Name="UserInfoText"
                               Grid.Row="2"
                               Text=""
                               Foreground="#FFA6A6A6"
                               FontFamily="{StaticResource VazirFont}"
                               FontSize="{StaticResource TinyTinyFontSize}"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"
                               Margin="8" />
                </Grid>
                <TextBlock Foreground="#FFA6A6A6"
                           Grid.Row="1"
                           FontFamily="{StaticResource VazirFont}"
                           FontSize="{StaticResource TinyFontSize}"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           Margin="14">
                    Do you want to let <Run x:Name="RunUser"></Run> send you messages from now on? They'll only know you've seen their requests if you choose Accept.
                </TextBlock>
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Rectangle Fill="#FF363636"
                       Height="1.5"
                       Margin="15 2.5"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch" />
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ToggleButton x:Name="BlockSingleToggleButton"
                              Style="{StaticResource HeaderToggleButtonRemovedIconStyle}"
                              Background="Transparent"
                              Content="Block"
                              Height="42"
                              HorizontalContentAlignment="Center"
                              Grid.Column="0"
                              FontSize="{StaticResource DefaultFontSize}"
                              FontFamily="{StaticResource VazirFont}"
                              Margin="5 0"
                              Click="BlockSingleToggleButtonClick"
                              Foreground="#FFFF2727"  />

                <Rectangle Fill="#FF363636"
                           Width="1.5"
                           Grid.Column="1"
                           Margin="3 8"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" />
                <ToggleButton x:Name="DeleteSingleToggleButton"
                              Style="{StaticResource HeaderToggleButtonRemovedIconStyle}"
                              Background="Transparent"
                              Content="Delete"
                              Height="42"
                              HorizontalContentAlignment="Center"
                              Grid.Column="2"
                              FontSize="{StaticResource DefaultFontSize}"
                              FontFamily="{StaticResource VazirFont}"
                              Margin="5 0"
                              Click="DeleteSingleToggleButtonClick"
                              Foreground="#FFFF6C6C" />
                <Rectangle Fill="#FF363636"
                           Width="1.5"
                           Grid.Column="3"
                           Margin="3 8"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch" />
                <ToggleButton x:Name="AcceptSingleToggleButton"
                              Style="{StaticResource HeaderToggleButtonRemovedIconStyle}"
                              Background="Transparent"
                              Content="Accept"
                              Height="42"
                              HorizontalContentAlignment="Center"
                              Grid.Column="4"
                              FontSize="{StaticResource DefaultFontSize}"
                              FontFamily="{StaticResource VazirFont}"
                              Margin="5 0"
                              Click="AcceptSingleToggleButtonClick"
                              Foreground="#FF34C08B" />
            </Grid>
        </Grid>
    </Grid>
